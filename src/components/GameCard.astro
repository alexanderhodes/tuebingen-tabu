<div class="game-card">
  <div class="card-content">
    <h2 id="main-word">Bereit?</h2>
    <div class="forbidden-words">
      <h3>Tabu-Wörter:</h3>
      <ul id="forbidden-list">
        <li>Klicke "Neues Spiel"</li>
      </ul>
    </div>
  </div>
</div>

<style>
  .game-card {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    min-width: 320px;
    max-width: 480px;
    text-align: center;
    border: 1px solid #e9ecef;
    transition: all 0.2s ease;
  }

  .game-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  .card-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: #2c3e50;
    font-weight: bold;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
  }

  .forbidden-words {
    text-align: left;
    background: #f8f9fa;
    border-radius: 8px;
    padding: 1.5rem;
    border-left: 3px solid #dc3545;
  }

  .forbidden-words h3 {
    color: #dc3545;
    margin-bottom: 1rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  #forbidden-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  #forbidden-list li {
    background: #fff;
    padding: 6px 12px;
    margin: 4px 0;
    border-radius: 6px;
    color: #dc3545;
    font-weight: 500;
    display: inline-block;
    margin-right: 6px;
    border: 1px solid #f8d7da;
  }

  @media (max-width: 480px) {
    .game-card {
      min-width: auto;
      margin: 0 1rem;
    }

    .card-content h2 {
      font-size: 2rem;
    }
  }
</style>

<script define:vars={{ tuebingenCards }}>
  let currentCardIndex = 0;
  let cards = tuebingenCards;

  function loadNewCard() {
    if (cards.length === 0) return;

    const card = cards[currentCardIndex];
    const mainWordElement = document.getElementById("main-word");
    const forbiddenListElement = document.getElementById("forbidden-list");

    if (mainWordElement) {
      mainWordElement.textContent = card.word;
    }

    if (forbiddenListElement) {
      forbiddenListElement.innerHTML = "";
      card.forbidden.forEach((word) => {
        const li = document.createElement("li");
        li.textContent = word;
        forbiddenListElement.appendChild(li);
      });
    }
  }

  function nextCard() {
    currentCardIndex = Math.floor(Math.random() * cards.length);
    loadNewCard();
  }

  function resetGame() {
    currentCardIndex = 0;
    loadNewCard();
  }

  // Listen to game events
  document.addEventListener("game:nextCard", () => {
    nextCard();
  });

  document.addEventListener("game:reset", () => {
    resetGame();
  });

  // Initialize on load
  document.addEventListener("DOMContentLoaded", () => {
    loadNewCard();
  });
</script>
