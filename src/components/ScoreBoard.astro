<div class="scoreboard">
  <div class="team team-a">
    <h3>Team A</h3>
    <div class="score" id="score-a">0</div>
    <button class="score-btn" onclick="changeScore('a', 1)">+1</button>
    <button class="score-btn" onclick="changeScore('a', -1)">-1</button>
  </div>

  <div class="vs">VS</div>

  <div class="team team-b">
    <h3>Team B</h3>
    <div class="score" id="score-b">0</div>
    <button class="score-btn" onclick="changeScore('b', 1)">+1</button>
    <button class="score-btn" onclick="changeScore('b', -1)">-1</button>
  </div>
</div>

<style>
  .scoreboard {
    display: flex;
    align-items: center;
    gap: 2rem;
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #dee2e6;
  }

  .team {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .team h3 {
    margin: 0;
    color: #2c3e50;
    font-size: 1.1rem;
    font-weight: bold;
  }

  .score {
    font-size: 2.5rem;
    font-weight: bold;
    color: #3498db;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    min-width: 60px;
    text-align: center;
  }

  .team-a .score {
    color: #e74c3c;
  }

  .team-b .score {
    color: #27ae60;
  }

  .score-btn {
    background: #fff;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    padding: 4px 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    font-weight: 500;
    margin: 0 2px;
    font-size: 0.85rem;
  }

  .score-btn:hover {
    background: #f8f9fa;
    border-color: #adb5bd;
  }

  .vs {
    font-size: 1.5rem;
    font-weight: bold;
    color: #7f8c8d;
    margin: 0 1rem;
  }

  @media (max-width: 768px) {
    .scoreboard {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .vs {
      margin: 0;
      transform: rotate(90deg);
    }

    .score {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .scoreboard {
      flex-direction: row;
      justify-content: space-around;
    }

    .vs {
      transform: none;
    }

    .team {
      gap: 0.25rem;
    }

    .team h3 {
      font-size: 1rem;
    }

    .score {
      font-size: 1.8rem;
    }
  }
</style>

<script>
  let scores = { a: 0, b: 0 };

  function changeScore(team, delta) {
    scores[team] = Math.max(0, scores[team] + delta);
    updateScoreDisplay();
  }

  function updateScoreDisplay() {
    const scoreAElement = document.getElementById("score-a");
    const scoreBElement = document.getElementById("score-b");

    if (scoreAElement) scoreAElement.textContent = scores.a;
    if (scoreBElement) scoreBElement.textContent = scores.b;
  }

  function resetScores() {
    scores = { a: 0, b: 0 };
    updateScoreDisplay();
  }

  // Export functions to global scope
  window.scoreboard = {
    changeScore,
    resetScores,
    getScores: () => ({ ...scores }),
  };

  // Make changeScore available globally
  window.changeScore = changeScore;

  document.addEventListener("DOMContentLoaded", () => {
    updateScoreDisplay();
  });
</script>
